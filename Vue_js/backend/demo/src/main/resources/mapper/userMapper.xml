<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.demo.mapper.UserMapper">
    <select id="enrollUser" parameterType="com.web.demo.model.User" >
        Insert into user VALUES ( null , #{id}, #{password}, #{name}, #{age} )
    </select>
    <select id="login" parameterType="com.web.demo.model.User" resultType="Boolean">
        SELECT id, password FROM user WHERE id = #{id} and password = #{password}
    </select>
</mapper>
